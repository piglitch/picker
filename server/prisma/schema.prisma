// schema.prisma
generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  files File[]
}

model File {
  id Int @id @default(autoincrement())
  title String
  uploader User? @relation(fields: [uploaderId], references: [id])
  uploaderId Int
  key String
}